<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yanghanwen.taskmanagementmonster.MyTaskActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Listing"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#E47833"
        android:textStyle="bold"
        android:layout_marginTop="90dp"/>
    <ListView
        android:id="@+id/RequesterTask"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        android:layout_marginLeft="10dp"/>


    <ListView
        android:id="@+id/requesterBiddingListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical" />

    <ListView
        android:id="@+id/requesterAssignedListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:scrollbars="vertical" />



</LinearLayout>